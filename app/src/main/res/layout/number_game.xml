<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numberLayout"
    android:background="@drawable/gradient_list2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberGame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="NUMBER MEMORY GAME"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ng_highScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtMain"
            android:layout_centerHorizontal="true"
            android:text="HIGHEST LEVEL:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ng_highScore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Level : 1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_level1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_numberInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_number0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_level1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:text=""
            android:textSize="60sp" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:digits="1234567890"
            android:ems="10"
            android:hint="What was the number?"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:backgroundTint="#BA3B62ED"
            android:text="CONFIRM"
            android:textColor="@color/white" />

        <TableLayout
            android:id="@+id/btnLayoutId"
            android:layout_below="@+id/b_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp">


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/numBtn7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="7"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/numBtn8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="8"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/numBtn9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="9"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/numBtn4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="4"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/numBtn5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="5"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/numBtn6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="6"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/numBtn1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="1"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/numBtn2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="2"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/numBtn3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="3"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/numBtnPeriod"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="."
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/numBtn0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#BA3B62ED"
                    android:hapticFeedbackEnabled="false"
                    android:text="0"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <ImageButton
                    android:id="@+id/numBtnDel"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/ic_baseline_backspace_24"
                    android:backgroundTint="#BF0B62ED"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</FrameLayout>



