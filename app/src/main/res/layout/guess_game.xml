<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guessLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list_gues"
    tools:context=".GuessGame">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="GUESS GAME"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/gg_highScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="HIGHEST LEVEL: "
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/levIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gg_highScore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="135dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="Hint"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/levIndicator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="Hint"

            android:textColor="#FFFFFF" />


        <EditText
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Guess the Number"
            android:inputType="textPersonName"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#4BBA8D34"
            android:text="Guess" />


        <TableLayout
            android:id="@+id/guessBtnLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guess"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp">


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/guessBtn7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="7"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/guessBtn8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="8"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/guessBtn9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="9"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/guessBtn4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="4"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/guessBtn5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="5"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/guessBtn6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="6"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/guessBtn1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="1"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/guessBtn2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="2"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/guessBtn3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="3"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/guessBtnPeriod"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:text="."
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:id="@+id/guessBtn0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@null"
                    android:backgroundTint="#85C57E3F"
                    android:backgroundTintMode="src_in"
                    android:text="0"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"
                    android:layout_margin="3dp"/>

                <ImageButton
                    android:id="@+id/guessBtnDel"
                    android:layout_width="30dp"
                    android:layout_height="55dp"
                    android:background="@drawable/ic_baseline_backspace_24"
                    android:backgroundTint="#855C2E04"
                    android:layout_margin="3dp"
                    />
            </TableRow>
        </TableLayout>


    </RelativeLayout>


</FrameLayout>



